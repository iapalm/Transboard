#sinatra_authentication
  %h1.page_title{:style=>"padding-bottom:30px;"} Signup 
  #sinatra_authentication_flash{:style=>"color:red;"}= flash[:notice]
  %form.signup.auth{:action => "/signup", :method => "post"}
    .field
      .nolabel
        %label{:for => "user_name"} Username
      %input{ :id => "user_name", :name => "user[name]", :class => "input-large", :size => 30, :type => "text" }
    .field
      .nolabel
        %label{:for => "user_email"} Email
      %input{ :id => "user_email", :name => "user[email]", :class => "input-large", :size => 30, :type => "text" }
    .field
      .nolabel
        %label{:for => "user_password"} Password
      %input{ :id => "user_password", :name => "user[password]", :class => "input-large", :size => 30, :type => "password" }
    .field
      .nolabel
        %label{:for => "user_password_confirmation"} Confirm Password
      %input{ :id => "user_password_confirmation", :name => "user[password_confirmation]", :class => "input-large", :size => 30, :type => "password" }
    .buttons
      %input{ :value => "Create account", :type => "submit" }
      %a{:href => "/login", :class => 'sinatra_authentication_link'}
        Login
    - if Sinatra.const_defined?('FacebookObject')
      .third_party_signup
        %h3.section_title One click signup:
        .login_link.facebook_login
          = render_facebook_connect_link('Signup using facebook', :size => 'large')
